{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "no-op",
  "name": "dew-org gateway",
  "endpoints": [
    {
      "endpoint": "/customers",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/customers",
          "sd": "dns",
          "host": [
            "customers.service.consul"
          ],
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/customers/{id}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/customers/{id}",
          "sd": "dns",
          "host": [
            "customers.service.consul"
          ],
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/catalogue",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/catalogue",
          "sd": "dns",
          "host": [
            "catalogue.service.consul"
          ],
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/catalogue/{codeOrSku}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/catalogue/{codeOrSku}",
          "sd": "dns",
          "host": [
            "catalogue.service.consul"
          ],
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/products",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/products",
          "sd": "dns",
          "host": [
            "products.service.consul"
          ],
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/products",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/products",
          "sd": "dns",
          "host": [
            "products.service.consul"
          ],
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/products/{code}",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/products/{code}",
          "sd": "dns",
          "host": [
            "products.service.consul"
          ],
          "disable_host_sanitize": true
        }
      ]
    },
    {
      "endpoint": "/invoices",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/invoices",
          "sd": "dns",
          "host": [
            "invoices.service.consul"
          ],
          "disable_host_sanitize": true
        }
      ]
    }
  ]
}
